{
  "name": "vue2-sonner",
  "version": "0.0.3",
  "type": "module",
  "description": "An opinionated toast component for Vue 2",
  "author": "Hermes C",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hermescati/vue2-sonner.git"
  },
  "keywords": [
    "vue",
    "vue2",
    "toast",
    "notification",
    "sonner"
  ],
  "main": "./dist/vue2-sonner.umd.cjs",
  "module": "./dist/vue2-sonner.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vue2-sonner.es.js",
      "require": "./dist/vue2-sonner.umd.cjs"
    },
    "./style.css": "./dist/vue2-sonner.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "type-check": "vue-tsc --noEmit",
    "release": "pnpm build && npm version patch && npm publish"
  },
  "dependencies": {
    "vue": "^2.7.16"
  },
  "devDependencies": {
    "@vitejs/plugin-vue2": "^2.3.4",
    "typescript": "~5.6.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vue-tsc": "^2.2.0"
  },
  "peerDependencies": {
    "vue": "^2.7.0"
  }
}
